{
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "vite build",
  "outputDirectory": "dist/public",
  "framework": null,
  "functions": {
    "api/admin/documents.ts": {
      "maxDuration": 300,
      "memory": 1024,
      "includeFiles": "lib/**"
    },
    "api/admin/document.ts": {
      "maxDuration": 300,
      "memory": 1024,
      "includeFiles": "lib/**"
    },
    "api/admin/process-document.ts": {
      "maxDuration": 300,
      "memory": 1024,
      "includeFiles": "lib/**"
    },
    "api/admin/upload-token.ts": {
      "maxDuration": 60,
      "includeFiles": "lib/**"
    },
    "api/compatibility.ts": {
      "maxDuration": 60,
      "includeFiles": "lib/**"
    },
    "api/search.ts": {
      "maxDuration": 60,
      "includeFiles": "lib/**"
    },
    "api/chat.ts": {
      "maxDuration": 120,
      "memory": 1024,
      "includeFiles": "lib/**"
    },
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
